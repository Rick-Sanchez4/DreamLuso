GET {{baseUrl}}/../health

### ==================================================
### ENUMS REFERENCE
### ==================================================

# UserRole:
# 0 = Guest
# 1 = Client
# 2 = RealEstateAgent
# 3 = Admin

# ClientType:
# 0 = Individual
# 1 = Company

# PropertyType:
# 0 = House, 1 = Apartment, 2 = Condo, 3 = Townhouse
# 4 = Land, 5 = Commercial, 6 = Office, 7 = Warehouse
# 8 = Farm, 9 = Villa, 10 = Studio, 11 = Penthouse, 12 = Other

# PropertyStatus:
# 0 = Available, 1 = Reserved, 2 = UnderContract
# 3 = Sold, 4 = Rented, 5 = Unavailable, 6 = InNegotiation

# TransactionType:
# 0 = Sale, 1 = Rent, 2 = Both

# Language:
# 0 = Portuguese, 1 = English, 2 = Spanish
# 3 = French, 4 = German, 5 = Italian
# 6 = Chinese, 7 = Arabic, 8 = Russian

